{
  # group windows by application in Mission Control's Expos√©
  # see https://nikitabobko.github.io/AeroSpace/guide#a-note-on-mission-control
  system.defaults.dock.expose-group-by-app = true;

  # do not automatically rearrange Spaces based on most recent use
  system.defaults.dock.mru-spaces = false;

  # one space spans across all physical displays
  system.defaults.spaces.spans-displays = true;

  # reduce motion when switching Spaces or opening apps
  system.defaults.universalaccess.reduceMotion = true;
}
